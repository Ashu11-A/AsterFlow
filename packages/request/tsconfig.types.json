{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "../../publish/request/dist/types",
    "rootDir": "src",
    "composite": false,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}